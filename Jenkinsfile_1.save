pipeline {
  agent any
  environment {
    PROJECT = "deft-manifest-297817"
    APP_NAME = "Python_App"
    CLUSTER = "gke-cluster-ydays-default-pool-793d464d-grp"
    CLUSTER_ZONE = "europe-west1-b"
    JENKINS_CRED = "${PROJECT}"
  }
 
  stages {
    stage('Deploy  dev') {
       agent {
      kubernetes {
         label 'master'
         yamlFile 'app/k8s/dev/deployment.yaml'
        }
      }

      steps{
        container('hello-app') {
          sh("sed -i.bak 's#gcr.io/deft-manifest-297817/app:latest#' ./app/k8s/dev/*.yaml")
          step([$class: 'KubernetesEngineBuilder', namespace:'dev', projectId: env.PROJECT, clusterName: env.CLUSTER, zone: env.CLUSTER_ZONE, manifestPattern: 'app/k8s/dev', credentialsId: env.JENKINS_CRED, verifyDeployments: true])
          
        }
      }
    }
    
  }
}
