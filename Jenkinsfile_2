  agent {
   kubernetes true 
  {

  stages {
    
   stage('Deploy dev') {

      agent {
      kubernetes {
         label 'master'
         yamlFile 'k8s/dev/deployment.yaml'
        }
      } 

            steps{
             
                step([$class: 'KubernetesEngineBuilder', 
