pipeline {
  agent { docker { image 'python:3.7.2' } }
  stages {
    stage('build') {
      steps {
        sh 'pip install -r requirements.txt'
      }
    }
    stage('test') {
      steps {
        sh "chmod +x -R ${env.WORKSPACE}"
        sh '/var/jenkins_home/workspace/Python_App/hello_world.py'
      }   
    }
  }
}